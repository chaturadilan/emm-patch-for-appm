<div class="container">
    <div class="apps">
        <h4>Mobile Apps</h4>


        <div class="filter-box">
            <form class="form-search">
                <select id="mobile-apps-platform-filter" class="hide">
                    <option value="all">All</option>
                    <option value="ios">iOS</option>
                    <option value="android">Android</option>
                </select>
                <input id="mobile-apps-search" type="text" placeholder="Search apps">
            </form>
        </div>

        <div class="well well-apps">
                {{#if  data.apps}}
                    {{else}}
                    <span style="color: #999999;" class="offset4">There are no apps to display</span>
                {{/if}}
            
            <div id="app-list-bar" class="owl-carousel owl-theme">
                

                {{#each data.apps}}

                <div class="app_box" class="item" data-name="{{this.attributes.overview_name}}" data-platform="{{this.attributes.overview_platform}}"> 
                    <div style="width:120px" title="{{this.attributes.overview_name}}" class="text-center"><b> {{#elipsis 10 this.attributes.overview_name}}{{/elipsis}}</b>
                    </div>
                    <a title="{{this.attributes.overview_name}}" href="#appid" data-packageid="{{this.attributes.overview_packagename}}"
                       data-platform="{{this.attributes.overview_platform}}"
                       data-type="{{this.attributes.overview_type}}" data-url="{{this.attributes.overview_url}}"
                       data-id="{{this.id}}">

                        <div style="position: absolute">
                            <img  src="/store/extensions/assets/mobileapp/themes/store/img/{{this.attributes.overview_platform}}.png" style="width: 20px;"/>
                        </div>

                        <img src="{{../config.publisher_location}}{{this.attributes.images_thumbnail}}"
                             class="icon img-polaroid" style="width:100px">
                    </a>
                </div>

                {{/each}}
            </div>
        </div>





    </div>

</div>

<div class="container stakes">
    <ul class="nav nav-tabs">
        <li class="active">
            <a href="#roles" data-toggle="tab">Roles</a>
        </li>
        <li><a href="#users" data-toggle="tab">Users</a></li>
    </ul>
    <div class="alert" style="display:none">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <span/><span/>
    </div>
    <div class="tab-content">
        <div class="tab-pane active" id="roles">
            <ul class="nav nav-pills">
                <button class="btn pull-right btn-danger uninstall-btn">Uninstall</button>
                <button class="btn pull-right btn-success btn-orange install-btn">Install</button>
            </ul>
            <div class="tab-content">
                <div class="tab-pane active" id="roles_app_status">

                </div>
            </div>
        </div>
        <div class="tab-pane" id="users">
            <ul class="nav nav-pills">
                <li class="active"><a class="install" href="#users_installed" data-toggle="tab">Installed</a></li>
                <li><a class="not-installed" href="#users_not-installed" data-toggle="tab">Not-installed</a></li>
                <button class="btn pull-right btn-danger">Uninstall</button>
            </ul>
            <div class="tab-content">
                <div class="tab-pane active" id="users_installed">

                </div>
                <div class="tab-pane" id="users_not-installed">

                </div>
            </div>
        </div>
    </div>
</div>