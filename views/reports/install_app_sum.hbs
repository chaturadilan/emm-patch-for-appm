<div class="container">

	<div class="raw-fluid">
		<div class="span12">

			<div class="raw-fluid">
				<div class="block">
					<div class="block-header">
						<div class="block-header-title pull-left">
							Installed applications summary for a given user
						</div>
						
							<div class="pull-right">
									

								</div>

					</div>
					
					
					

					<div class="block-body block-body container-fluid raw-fluid">

						<div class="raw-fluid" style="margin-left: -25px">
							
							<form method="post" enctype="multipart/form-data">

						

							<div class="span2 operation-filter">
								<div class="control-group">
									<label class="control-label" for="inputEmail">Username</label>
									<div class="controls">
										<input id="username" name="username" class="span2" size="16" type="text" value="{{data.inputData.username}}" >
									</div>
								</div>
							</div>

							
							<div class="span2 operation-filter">								
								<div class="control-group">
									<label class="control-label" for="inputPassword" >&nbsp;</label>
									<div class="controls">
										<button class="btn btn-orange" type="sumbit" >Find</button>
									</div>
								</div>
							</div>
							
							</form>
							
							
						</div>		
												

						<div class="raw">

							<div class="span11">						

								<table cellpadding="0" cellspacing="0" border="0"
								class="table table-striped table-bordered" id="main-table">
									<thead>
										<tr>
											<th>Application Name</th>
											<th>Device Id</th>
											<th>Platform</th>
											<th>OS version</th>		
										</tr>
									</thead>
									<tbody>
										{{#data.results}}
											<tr>
												<td>{{name}}</td>
												<td>{{device_id}}</td>
												<td>{{platform}}</td>
												<td>{{os_version}}</td>
											</tr>
										{{/data.results}}
									</tbody>									
								</table>
								
							</div>
						</div>

					</div>
				</div>
			</div>

		</div>

	</div>

</div>

