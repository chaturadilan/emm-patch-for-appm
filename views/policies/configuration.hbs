<div class="container">

	<div class="raw-fluid">
		<div class="span12">{{>config-navigation}}</div>
	</div>

	<div class="raw">
		<div class="span12">
			<div class="raw-fluid">

				<div class="block">
					<div class="block-header">
						<div class="block-header-title pull-left">Policies</div>
						<div class="pull-right">
							<a class="btn btn-orange btn-config" href="add">Add Policy</a>							
						</div>
					</div>

					<div class="block-body block-body container-fluid raw-fluid">		

						<div class="span11">	
							
							<table cellpadding="0" cellspacing="0" border="0"
								class="table table-striped table-bordered" id="main-table">
								<thead>
									<tr>
										<th>Id</th>
										<th>Name</th>										
										<th>Action</th>
									</tr>
								</thead>
								<tbody>								
									{{#data.policies}}
									<tr>
										<td>{{id}}</td>			
										<td>{{name}}</td>										
										<td class="center">											
											<a href="assign_groups?policy={{id}}&policyName={{name}}"  data-toggle="modal" title="Assign Groups"
												><i class="icon-group"> </i> View/ Assign Resources</a> &nbsp;
												
												<a href="edit?policy={{id}}&policyName={{name}}"  data-toggle="modal" title="Edit"
												><i class="icon-edit"> </i>View / Edit</a> &nbsp;
												
												<a href="#"  class="btn-item-enforce hide" data-item="{{id}}" title="Enforce"
												><i class="icon-star"> </i>Enforce</a>	 &nbsp;
												
												<a href="#"  class="btn-item-remove" data-item="{{id}}" title="Remove"
												><i class="icon-remove"> </i>Remove</a>	 &nbsp;																							
										</td>
									</tr>
									{{/data.policies}}
								</tbody>
							</table>
						
						</div>
					</div>

				</div>

			</div>

		</div>

	</div>

</div>

<!-- Modal Groups -->
<div id="assignGroup" class="modal hide" tabindex="-1" role="dialog" aria-hidden="true"  style="width:700px">

	
		<div class="modal-header">
			<button class="close" data-dismiss="modal">
				x
			</button>
			<h3 id="assign-group-heading">Assign Groups</h3>
		</div>
		<div class="modal-body">

			<div class="control-group">
				<label class="control-label" for="inputMobile">Group</label>
				<div class="controls raw">
					<div class="span6">
						<select multiple="multiple" size="10" id="inputGroups" name="inputGroups" class='duallistbox'>
							{{#data.groups}}
							<option value="{{this}}">{{this}}</option>
							{{/data.groups}}

						</select> 
					</div>

				</div>
			</div>

		</div>
		<div class="modal-footer">
			<a href="#" class="btn" data-dismiss="modal">Close</a>
			<a href="#" id="btn-assign-group" class="btn btn-orange" data-dismiss="modal">Assign</a>
		</div>

</div>

