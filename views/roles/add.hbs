<div class="container">

	<div class="raw-fluid">
		<ul class="breadcrumb">
			<li>
				<a href="configuration">Roles</a><span class="divider">/</span>
			</li>
			<li class="active">
				Add
			</li>
		</ul>
	</div>

	<div class="raw-fluid">
		
		<div class="span12">

			<div class="raw-fluid">
				<div class="block">
					<div class="block-header">
						<div class="block-header-title pull-left">
							Add Role
						</div>

					</div>

					<div class="block-body">
						<form class="form-horizontal" data-validate="parsley">
							<div class="control-group">
								<label class="control-label" for="inputFirstName">Name <span class="mandatory-field">*</span></label>
								<div class="controls">
									<input type="text" id="inputName" class="input-xxlarge" data-required="true">
								</div>
							</div>
							
							<!-- this is disable because it does not support multiple admins
							<div class="control-group">
								<label class="control-label" for="inputFirstName">Role Type</label>
								<div class="controls">
									User <input type="radio" class="radioGroupType" name="inputType" value="user" checked="checked"> &nbsp;
									EMM Admin <input type="radio" class="radioGroupType" name="inputType" value="administrator"> &nbsp;
								</div>
							</div>
							-->

							<div class="control-group">
								<label class="control-label" for="inputMobile">Users</label>
								<div class="controls raw">
									<div class="multiple-selectbox">
										<select multiple="multiple" size="10" id="inputUsers" name="inputUsers" class='duallistbox'>
											{{#data.users}}
											
											<option value="{{username}}">{{username}}</option>
											
											{{/data.users}}
										</select>
									</div>

								</div>
							</div>

							<hr>
							<div class="offset1-5">
								<a class="btn btn-orange" id="btn-add" href="#" >Add</a>
							</div>

							<input type="hidden" id="tenantId" value="{{data.tenantId}}" />
						</form>
					</div>
				</div>
			</div>

		</div>

	</div>

</div>

<style>
	.info-container{
		display: none
	}
	
</style>
